@page "/"
@inject NavigationManager NavigationManager

    <div style="text-align: center">
        <fieldset>
            <br />
            <h1 style="font-family: 'Mate SC', serif;">Welcome to <b><font color="orange">NeoLearn!</font></b></h1>
            <br />
            <h4 style="font-family: 'Merriweather', serif;">Your repetitive E-Learning Website</h4>
            <br /> <br />
            <button class="btn btn-warning" style="font-family: 'Merriweather', serif;" @onclick="RouteToLogin">Login</button>
